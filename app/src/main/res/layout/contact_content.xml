<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ece.iceageophone.main.activity.ContactActivity"
    tools:showIn="@layout/contact_app_bar">

    <Button
        android:text="@string/vibrate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vibrate_button"
        android:background="@color/iceagegradcenter"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/TVVibrate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_below="@+id/send_instructions_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:id="@+id/ETInstructions"
        android:hint="@string/hintInstructions"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="14sp" />

    <TextView
        android:text="@string/vibrate_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TVVibrate"
        android:textAlignment="center"
        android:layout_marginTop="11dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/ring_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TVRing"
        android:textAlignment="center"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/vibrate_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/ring"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ring_button"
        android:background="@color/iceagegradcenter"
        android:layout_below="@+id/TVRing"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp" />

    <TextView
        android:text="@string/send_instructions_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TVSend"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/ring_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/send_instructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/send_instructions_button"
        android:layout_marginTop="33dp"
        android:background="@color/iceagegradcenter"
        android:layout_below="@+id/TVSend"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>