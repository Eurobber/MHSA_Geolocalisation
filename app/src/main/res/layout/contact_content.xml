<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ece.iceageophone.main.activity.ContactActivity"
    tools:showIn="@layout/contact_app_bar">

    <TextView
        android:text="@string/send_instructions_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TVSend"
        android:textAlignment="center"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/ring_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/send_instructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/send_instructions_button"
        android:layout_marginTop="19dp"
        android:background="@color/iceagegradcenter"
        android:layout_below="@+id/TVSend"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/ring"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ring_button"
        android:background="@color/iceagegradcenter"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/ring_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TVRing"
        android:textAlignment="center"
        android:layout_marginBottom="17dp"
        android:layout_above="@+id/ring_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/vibrate_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TVVibrate"
        android:textAlignment="center"
        android:layout_marginTop="54dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/vibrate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vibrate_button"
        android:background="@color/iceagegradcenter"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/TVVibrate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>